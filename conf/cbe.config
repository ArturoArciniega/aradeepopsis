/* -------------------------------------------------
 * Nextflow config file for CBE 
 * -------------------------------------------------
 */

singularity.cacheDir = '/scratch-cbe/shared/containers'

process {
  container = 'docker.artifactory.imp.ac.at/becker/aradeepopsis:dev'
  executor = 'slurm'
  module = 'singularity/3.4.1:anaconda3/2019.03'
  queue = 'c'
  clusterOptions = { task.time <= 8.h ? '--qos short': task.time <= 48.h ? '--qos medium' : '--qos long' }
}
